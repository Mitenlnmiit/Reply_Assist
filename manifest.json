{
  "manifest_version": 3,
  "name": "Reply Assist",
  "version": "1.0.0",
  "description": "Refine your chat replies using AI with context awareness",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reply Assist"
  },
  "options_page": "options.html",
  "commands": {
    "refine-preview": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Custom instruction refinement"
    },
    "refine-replace": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Replace draft with refined reply"
    }
  },
  "icons": {
    "16": "icons/reply.png",
    "32": "icons/reply.png",
    "48": "icons/reply.png",
    "128": "icons/reply.png"
  }
}
